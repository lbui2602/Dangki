<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDangNhap">

    <EditText
        android:id="@+id/edtTenDangNhap2"
        android:layout_width="298dp"
        android:layout_height="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="108dp"
        android:hint="Ten dang nhap : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDangKy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:text="Dang ky"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="391dp" />

    <EditText
        android:id="@+id/edtMatKhau2"
        android:layout_width="298dp"
        android:layout_height="54dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Mat khau :"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTenDangNhap2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edtMatKhau22"
        android:layout_width="298dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nhap lai mat khau :"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhau2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp" />
</androidx.constraintlayout.widget.ConstraintLayout>